

    <% if @article.errors.any? %>
    <div class=" bg-success w-50 mx-auto text-light">
      <h2 class=" text-uppercase text-center">The following errors prevented the article from being saved</h2>
      <% @article.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
      <% end %>
      <% end %>
    </div>
   
  <%= form_with(model: @article, local: true, class: 'text-center bg-light w-50 mx-auto border border-secondary') do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'font-weight-bold' %><br />
    <%= f.text_field :title %>
  </div >
  
  <div class="form-group">
    <%= f.label :description, class: 'font-weight-bold' %><br />
    <%= f.text_area :description, rows: '5', cols: '50' %>
  </div>
  
  <div class="mt-4 form-group">
    <%= f.submit %>
  </div>
  <% end %>


